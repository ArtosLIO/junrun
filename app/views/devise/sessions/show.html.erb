<h2 class="text-center">Show <%= resource_name.to_s.humanize %></h2>

<%= form_for @user, url: update_user_path(@user), html: {method: :put} do |f|%>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-outline-success" %>
  </div>
<% end %>

<%= link_to "Back", :back, class: "btn btn-outline-danger" %>
